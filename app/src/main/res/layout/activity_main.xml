<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_Flashcard_Question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/flashcard_question_background"
        android:elevation="5dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/flashcard_default_question"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView_Flashcard_Answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/flashcard_answer_background"
        android:elevation="5dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/flashcard_default_answer"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView_Flashcard_mc1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView_Flashcard_Answer"
        android:layout_margin="5dp"
        android:background="@color/flashcardMCBackground"
        android:gravity="center"
        android:text="@string/flashcard_default_mc_wrong"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_Flashcard_mc2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView_Flashcard_mc1"
        android:layout_margin="5dp"
        android:background="@color/flashcardMCBackground"
        android:gravity="center"
        android:text="@string/flashcard_default_mc_correct"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView_Flashcard_mc3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView_Flashcard_mc2"
        android:layout_margin="5dp"
        android:background="@color/flashcardMCBackground"
        android:gravity="center"
        android:text="@string/flashcard_default_mc_wrong"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView_addCard"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_icon_add" />
</RelativeLayout>